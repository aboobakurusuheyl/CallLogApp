@model IEnumerable<DataContext.People>

@{
    ViewBag.Title = "Index";
}

<div id="content" class="content">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
        <li class="breadcrumb-item"><a href="javascript:;">Tables</a></li>
        <li class="breadcrumb-item active">މީހުންގެ ލިސްޓް</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">Managed Tables <small>header small text goes here...</small></h1>
    <!-- end page-header -->
    <!-- begin panel -->
    <div class="panel panel-inverse">
        <!-- begin panel-heading -->
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title dhiDefault">ތަފްސީލް</h4>
        </div>
        <!-- end panel-heading -->
        <!-- begin panel-body -->
        <div class="panel-body">
            <div id="data-table-default_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="col-sm-12">
                    <table id="data-table-default" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="data-table-default_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NameEn)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NameDhi)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.DateOfBirth)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.NationalId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.Gender)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GenderDhi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Atoll)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AtollDhi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Island)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IslandDhi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AddressDhi)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameEn)
                                    </td>
                                    <td class="dhiDefault">
                                        @Html.DisplayFor(modelItem => item.NameDhi)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NationalId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td class="dhiDefault">
                                            @Html.DisplayFor(modelItem => item.GenderDhi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Atoll)
                                        </td>
                                        <td class="dhiDefault">
                                            @Html.DisplayFor(modelItem => item.AtollDhi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Island)
                                        </td>
                                        <td class="dhiDefault">
                                            @Html.DisplayFor(modelItem => item.IslandDhi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td class="dhiDefault">
                                            @Html.DisplayFor(modelItem => item.AddressDhi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Remarks)
                                        </td>*@
                                    <td>
                                        <a class="btn btn-primary btn-sm dhiDefault" href="@Url.Action("Details","People", new {id = item.PeopleId })" >ތަފްސީލް</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel-body -->
    </div>
    <!-- end panel -->
</div>
